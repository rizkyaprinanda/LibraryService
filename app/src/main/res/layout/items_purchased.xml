<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bgitem"
            android:orientation="vertical"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                app:cardCornerRadius="2dp">

                <ImageView
                    android:id="@+id/gambaritem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:src="@drawable/logo" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/framepurchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bgcategory"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/purchase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:padding="4dp"
                        android:text="Purchashed"
                        android:textColor="#E57373"
                        android:textSize="10sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/jumlah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Vote"
                        android:textColor="#E57373"
                        android:textSize="10sp" />
                </FrameLayout>
            </LinearLayout>

    <TextView
        android:id="@+id/judulbuku"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Luka Kata"
        android:textColor="#FBFBFB"
        android:textSize="10dp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/penulisbuku"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserratregular"
        android:text="Candra Malik"
        android:textColor="#FFFCFC"
        android:textSize="9dp"
        tools:ignore="TextSizeCheck" />

            <Button
                android:id="@+id/load"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:height="30dp"
                android:background="@drawable/radiusbutton"
                android:fontFamily="@font/montserrat_bold"
                android:text="Load More"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
